# EditorConfig: http://EditorConfig.org

root = {{ .iswork }}

[*]
end_of_line = lf
insert_final_newline = {{ .iswork }}
charset = utf-8

[*.md]
max_line_length = 76
indent_size = 4
trim_trailing_whitespace = {{ .iswork }}

[Vagrantfile]
indent_style = space
indent_size = 2
trim_trailing_whitespace = {{ .iswork }}


[{*.sh,*.tmux}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = {{ .iswork }}
